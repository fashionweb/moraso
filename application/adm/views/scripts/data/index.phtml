		draggable: false,
		id: '0'
	},
	listeners: {
		click: function(node, event) {
			node.expand();
		},
		contextmenu: function(node) {
			new Ext.menu.Menu({
  				items: [{
    				text: '<?php echo $this->translate('Add to favorites'); ?>',
    				iconCls: 'cm-bookmark-category',
    				handler: function() {
