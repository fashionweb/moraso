{
	region: 'south',
	id: 'center-south',
	unstyled: true,
	layout: 'fit',
	split: true,
	collapsible: true,
	collapseMode: 'mini',
	hideCollapseTool: true,
	minHeight: 300,
	height: 300,
	items: new Ext.TabPanel({
		id: 'center-south-tab',
		resizeTabs: false,
		minTabWidth: 115,
		tabWidth:135,
		enableTabScroll:true,
		defaults: {
			autoScroll:true
		},
		tabPosition: 'top',
		listeners: {
			tabchange: function(panel, tab) {
				if (panel.items.getCount() == 0) {
					Ext.getCmp('center-south').setVisible(false);
					Ext.getCmp('viewport').doLayout();
				}
			},
			render: function(p) {
            	p.header.on('dblclick', function(e, el, o) {
            		var dim = registry.get('center-south-dim');
            		if (typeof dim == 'undefined') {
            			dim = {
            				isBig: false,
							height: 500,
							westIsCollapsed: Ext.getCmp('viewport').layout.west.isCollapsed
            			}
            		}
            		if (dim.isBig) {
            			/* reduce */
            			dim.isBig = false;
            			if (!dim.westIsCollapsed && Ext.getCmp('viewport').layout.west.isVisible()) {
            				Ext.getCmp('viewport-west').expand(false);
            			}
            			dim.height = Ext.getCmp('center-south').getHeight();
            			Ext.getCmp('center-south').setHeight(300);
            		} else {
            			/* maximize */
            			dim.isBig = true;
            			if (Ext.getCmp('viewport').layout.west.isCollapsed) {
            				dim.westIsCollapsed = true;
            			} else {
            				dim.westIsCollapsed = false;
            				Ext.getCmp('viewport-west').collapse(false);
            			}
            			Ext.getCmp('center-south').setHeight(dim.height);
            		}
            		Ext.getCmp('viewport').doLayout();
            		registry.add('center-south-dim', dim);
            	}, this);
        	}
		}
	})
}