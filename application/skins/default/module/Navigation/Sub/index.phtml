<!-- Standard -->
<div class="docs section-container accordion" data-section data-options="deep_linking: false">
    <?php foreach ($this->nav as $cat) : $cat = (object) $cat; ?>
    <section class="section <?php if ($cat->isCurrent || $cat->isParent) {
        echo 'active';
    } ?>">
    <p class="title">
        <a href="{ref:idcat-<?php echo $cat->idcat; ?>}"><?php echo $cat->name; ?></a>
