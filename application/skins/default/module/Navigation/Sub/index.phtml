    <?php if ($cat->haschildren) : ?>
    <div class="content">
        <ul class="side-nav">
            <li>
                <a href="{ref:idcat-<?php echo $cat->idcat; ?>}"><?php echo $cat->name; ?></a>
            </li>
            <?php foreach ($cat->children as $child) : ?>
            <li>
                <a href="{ref:idcat-<?php echo $child->idcat; ?>}"><?php echo $child->name; ?></a>
            </li>
        <?php endforeach; ?>
    </ul>
</div>
