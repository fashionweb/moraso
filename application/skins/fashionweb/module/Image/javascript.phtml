<?php if (count($this->selectedImages) > 0) : ?>
    <?php if (Aitsu_Application_Status::isEdit()) : ?>
        <span>Image-Modul mit JavaScript Ausgabe bearbeiten</span>
    <?php endif; ?>
    <?php
    $images = array();
    foreach ($this->selectedImages as $image) {
        $imagePath = Moraso_Html_Helper_Image::getPath($image->idart, $image->filename, $this->width, $this->height, $this->render);
        $article_title = $image->subline;
