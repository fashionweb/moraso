        $article_text = $image->description;

        $images[] = "image: '{$imagePath}', article_title: '{$article_title}', article_url: '{$article_url}', article_text: '{$article_text}'";
    }
    ?>

    <script type='text/javascript'>
        var supersized_slides = [{<?php echo implode('},{', $images); ?>}];
    </script>
<?php endif; ?>