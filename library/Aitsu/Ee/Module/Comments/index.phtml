<div id="comments">
	<?php if (count($this->comments) > 0) : ?>
		<div class="comment">
		<?php foreach ($this->comments as $comment) : ?>
			<h4><?php echo $comment->name; ?></h4>
			<p>
				<?php echo Aitsu_Util_Date :: fromMySQL($comment->created)->get(); ?>&nbsp;-&nbsp;
				<?php echo nl2br($comment->comment); ?>
			</p>
		<?php endforeach; ?>
		</div>
	<?php endif; ?>

	<form id="comment-form" class="yform">
		<input type="hidden" name="comment-ajax" value="1" />
		<?php if (!Aitsu_Form_Validation :: isValid('name', $value)) : ?>
			<div class="type-text error">
			<strong class="message">Bitte geben Sie Ihren Namen an.</strong>
		<?php else : ?>
			<div class="type-text">
		<?php endif; ?>
			<label for="comment-name">Name</label>
			<input type="text" name="name" id="comment-name" size="20" value="<?php echo $value; ?>" />
		</div>
		<?php if (!Aitsu_Form_Validation :: isValid('email', $value)) : ?>
			<div class="type-text error">
			<strong class="message">Bitte geben Sie Ihre Email an.</strong>
		<?php else : ?>
			<div class="type-text">
		<?php endif; ?>
			<label for="comment-email">Email</label>
			<input type="text" name="email" id="comment-email" size="20" value="<?php echo $value; ?>" />
		</div>
		<?php if (!Aitsu_Form_Validation :: isValid('comment', $value)) : ?>
			<div class="type-text error">
			<strong class="message">Bitte beachten Sie, dass HTML-Tags nicht erlaubt sind.</strong>
		<?php else : ?>
			<div class="type-text">
		<?php endif; ?>
			<label for="comment-comment">Kommentar</label>
			<textarea name="comment" id="comment-comment" cols="30" rows="7"><?php echo $value; ?></textarea>
		</div>
		
		<div class="type-button">
  			<input type="button" value="submit" id="comment-submit" name="submit" />
		</div>
	</form>
</div>